import random

random_number = random.randint(1, 9)


name = "Levi"
question = "am i cool"
answer = ""

if random_number := random.randint(1, 9) == 1:
  answer = "Yes - definitely"
elif random_number := random.randint(1, 9) == 2:
  answer = "It is decidedly so"
elif random_number := random.randint(1, 9) == 3:
  answer = "Without a doubt"
elif random_number := random.randint(1, 9) == 4:
  answer = "Reply hazy, try again"
elif random_number := random.randint(1, 9) == 5:
  answer = "Ask again later"
elif random_number := random.randint(1, 9) == 6:
  answer = "Better not tell you now"
elif random_number := random.randint(1, 9) == 7:
  answer = "My sources say no"
elif random_number := random.randint(1, 9) == 8:
  answer = "Outlook not so good"
elif random_number := random.randint(1, 9) == 9:
  answer = "Very doubtful"
else:
  answer = "Error"

print(f"{name} asks: {question}")
print(f"Magic 8-Ball's answer: {answer}")
